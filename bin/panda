#!/bin/bash

set -e
set -u


if [[ $# -eq 0 ]]; then
  cd $PANDA_HOME
  exit 0
fi

case $1 in
  help)
    echo "Usage: panda <angular|reload|code|xcode|help>"
  ;;
  angular)
    cd $PANDA_HOME/whiskers
    npm start
  ;;
  xcode)
    cd $PANDA_HOME/tail
    vapor xcode -y 
  ;;
  code)
    cd $PANDA_HOME/whiskers
    code .
  ;;
  reload)
    echo -n "Reloading... "
    { curl -X POST http://localhost:8080/heroes/reload 2> /dev/null && echo "[OK]"; } || echo "[FAIL]"
  ;;
  *)
    echo "Invalid Command: $1"
  ;;
esac
